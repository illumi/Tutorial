<div class="sixteen columns">

<p id="notice"><%= notice %></p>

<h2> Available Tutorials for <%= @subject.name %></h2>

<p><%= @subject.description %> <%= link_to 'Edit subject', edit_subject_path(@subject) %></p>

<!-- add link to new tutorial for this subject.-->

<% @subject.tutorials.each do |tutorial| %>
  <ol class="tutorial-class">
    <li class="tutorial-class-item">
      <p class="tutorial-title">
        <h3><%= link_to tutorial.name, tutorial%></h3>
      </p>
      <p class="tutorial-description">
        <%= tutorial.description %>
      </p>
      <div class="tutorial-links">
        <%= link_to 'Edit', edit_tutorial_path(tutorial) %>
        <%= link_to 'Delete', tutorial, confirm: 'Are you sure?', method: :delete %>
      </div>
    </li>
  </ol>
<% end %>

<%= link_to 'Back', subjects_path %>

</div>

